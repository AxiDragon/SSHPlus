{
    "manifest_version": 3,
    "name": "SSH+",
    "version": "1.4.0",
    "permissions": [
        "tabs"
    ],
    "action": {
        "default_popup": "sshplus.html",
        "default_icon": "sshplus.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.sshxl.nl/*"
            ],
            "js": [
                "scripts/loadChangeChecker.js",
                "scripts/positionChecker.js",
                "scripts/language.js",
                "scripts/replies.js",
                "scripts/offer.js",
                "scripts/visitTracker.js",
                "scripts/propertyFilter.js",
                "scripts/popupHandler.js"
            ]
        }
    ]
}